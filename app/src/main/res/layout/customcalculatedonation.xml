<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="35dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".HomeScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:text="ELIGIBILITY TEST"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/customtop"
            android:textColor="@color/colorWhite"/>



    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

       <Button
           android:id="@+id/calculatenow"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Select the Date You Last Donate Blood"
           android:background="@drawable/calcresult"
           android:textColor="@color/colorPrimary"
           android:drawableStart="@drawable/ic_calendar_today_24px"
           android:textStyle="bold"
           android:padding="5dp"
           android:drawableRight="@drawable/ic_calendar_today_24px"
           android:drawableEnd="@drawable/ic_calendar_today_24px"
           android:drawableLeft="@drawable/ic_calendar_today_24px" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="You Can Donate Blood On..."
            android:gravity="center"
            android:textColor="@color/colorText"/>
        <TextView
            android:id="@+id/calcdonorresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Result Here"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            />
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custombottom"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
