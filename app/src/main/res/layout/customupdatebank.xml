<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="35dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".HomeScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:text="UPDATE BLOOD BANK"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/customtop"
            android:textColor="@color/colorWhite"/>



    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select Blood Type"
            android:textColor="@color/colorText"/>
        <Spinner
            android:id="@+id/bloodtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textshape"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Enter Unit In Stock"
            android:textColor="@color/colorText"/>
        <EditText
            android:id="@+id/unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/textshape"
            android:ems="10"
            android:hint="Blood Unit"
            android:inputType="text|number" />

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:text="@string/updatebank"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custombottom"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
