<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/menushape"
    tools:showIn="@layout/activity_home_screen">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/calcresult"
            android:gravity="center"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nodonor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:padding="10dp"
                android:background="@drawable/circle"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_weight="3"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registered Donors"
                android:textColor="@color/colorText"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/calcresult"
            android:gravity="center"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nohospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:padding="10dp"
                android:background="@drawable/circle"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_weight="3"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registered Hospitals"
                android:textColor="@color/colorText"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/calcresult"
            android:gravity="center"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:padding="10dp"
                android:background="@drawable/circle"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_weight="3"
                android:gravity="center"
                android:id="@+id/nobank"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Banks"
                android:textColor="@color/colorText"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/calcresult"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical">
            <TextView
                android:id="@+id/norequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:padding="10dp"
                android:background="@drawable/circle"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_weight="3"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Created Request"
                android:textColor="@color/colorText"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
